{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"lib": ["esnext"],
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": true
	},
	"include": ["src/**/*"]
}
